.side
  .side__header
    .side__header__box
      .side__header__box__name 
        = current_user.name
      .side__header__box__icons
        = link_to new_group_path do
          %i.far.fa-edit.side__header__box__icon__btn-edit
          %span<>
        = link_to edit_user_path(current_user.id) do
          %i.fa.fa-cog.side__header__box__icon__btn-cog
          %span<>
  .side__groups
    - current_user.groups.each do |group|
      .side__groups__list
        = link_to group_messages_path(group) do
          .side__groups__list__name
            = group.name
          .side__groups__list__message
            = group.show_last_message